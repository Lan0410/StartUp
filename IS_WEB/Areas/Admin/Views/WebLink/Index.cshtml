<!--Modal show-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby=data-toggle ="modal" data-target="#exampleModal" "exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm liên kết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="link_code" class="col-form-label">Mã liên kết:</label>
                        <input type="text" class="form-control" id="link_code">
                    </div>
                    <div class="form-group">
                        <label for="link_name" class="col-form-label">Tên liên kết:</label>
                        <input type="text" class="form-control" id="link_name">
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Mô tả:</label>
                        <input type="text" class="form-control" id="description">
                    </div>
                    <div class="form-group">
                        <label for="active" class="col-form-label">Trạng thái:</label>
                        <select id="active">
                            <option value="1">Hoạt động</option>
                            <option value="0">Không hoạt động</option>
                        </select>
                        @*<input type="text" class="form-control" id="active">*@
                    </div>
                    <input type="hidden" class="form-control" id="link_id">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="Save()">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Xóa liên kết</h4>
            </div>
            <div class="modal-body">

                <input type="hidden" class="form-control" id="link_id_delete">
                <div class="row">
                    <div class="col-md-12"><label class="label label-danger">Bạn có muốn xóa liên kết trên không?</label></div>

                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal" id="cmdxoa" onclick="SaveDelete()">Delete</button>
                <button class="btn btn-danger" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>


<!--End modal-->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script>
    var start = 1;
    var length = 4;
    var totalRecord = 0;


    var object = {
        Link_Name: ""
    }
    var request = {
        start: start,
        length: length,
        model: object
    }
    $(document).ready(function () {

        var formData = new FormData();
        formData.append('start', start);
        formData.append('length', length);
        formData.append('model', JSON.stringify(object));
        $.ajax({
            type: "POST",
            datatype: "json",
            data: formData,
            url: "https://localhost:44329/admin/weblink/getdata",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (data) {
                $("#list").html("");
                totalRecord = data.totalRow;
                let count = (start - 1) * length + 1;
                $.each(data.data, function (i, val) {
                    let act = val.active == 1 ? "Hoạt động" : "Không hoạt động";
                    let type = val.active == 1 ? 'badge-success' : 'badge-danger';
                    $("#list").append("<tr><td>" + (i + count) + "</td><td>" + val.link_Code + "</td><td>" + val.link_Name + "</td>\
                <td>"+ val.description + "</td><td> <span class='badge badge-pill " + type + "'> " + act + "</span></td ><td>\
                <button  class='btn btn-outline-warning' onclick='Edit(" + val.id + ")'>Sửa</button>\
                <button  class='btn btn-outline-danger' onclick='Delete(" + val.id + ")'>Xóa</button></td></tr > ")


                })
                loadPagination(totalRecord);
                let PElement = document.querySelector("li.item");
                PElement.classList.add("active");
                if (totalRecord > 0) {

                }
            }
        })

    })

    function loadData(start, length, object) {
        var formData = new FormData();
        formData.append('start', start);
        formData.append('length', length);
        formData.append('model', JSON.stringify(object));
        $.ajax({
            type: "POST",
            datatype: "json",
            data: formData,
            url: "https://localhost:44329/admin/weblink/getdata",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (data) {
                $("#list").html("");
                totalRecord = data.totalRow;
                let count = (start - 1) * length + 1;
                $.each(data.data, function (i, val) {
                    let act = val.active == 1 ? "Hoạt động" : "Không hoạt động";
                    let type = val.active == 1 ? 'badge-success' : 'badge-danger';
                    $("#list").append("<tr><td>" + (i + count) + "</td><td>" + val.link_Code + "</td><td>" + val.link_Name + "</td>\
                <td>"+ val.description + "</td><td> <span class='badge badge-pill " + type + "'> " + act + "</span></td ><td>\
                <button  class='btn btn-outline-warning' onclick='Edit(" + val.id + ")'>Sửa</button>\
                <button  class='btn btn-outline-danger' onclick='Delete(" + val.id + ")'>Xóa</button></td></tr > ")


                })
                //loadPagination(totalRecord);
            }
        })
    }
    function loadPagination(total) {
        total = Math.ceil(total / length);
        $('#pagination').html("");
        $('#pagination').append("<li class='paginate_button page-item previous disabled' id='dataTable_previous'><a class='page-link'>Trước</a></li>");
        for (let i = 1; i <= total; i++) {
            $('#pagination').append(`<li class="paginate_button page-item item " value='${i}'><a class='page-link'>${i}</a></li>`)
        }
        $('#pagination').append(`<li class="paginate_button page-item next" id="dataTable_next"><a class='page-link'>Sau</a></li>`)
        var PaginationElement = document.querySelectorAll("li.item");
        $('.page-item.item').click(function () {
            console.log("abc")
            PaginationElement.forEach(function (ele) {
                ele.classList.remove("active");
                ele.classList.remove("disabled");

            })
            this.classList.add("active");
            start = this.value;
            loadData(start, length, object);
        })
        $('.previous').click(function () {
            if (start > 1) {

                start--;
                loadData(start, length, object);

                this.classList.remove("disabled");
                PaginationElement.forEach(function (ele) {
                    ele.classList.remove("active");
                    ele.classList.remove("disabled");
                    if (ele.value == start) ele.classList.add("active");

                })
            }
            else this.classList.add("disabled");
        })
        $('.next').click(function () {

            if (start < total) {

                start++;
                loadData(start, length, object);

                this.classList.remove("disabled");
                PaginationElement.forEach(function (ele) {
                    ele.classList.remove("active");
                    ele.classList.remove("disabled");
                    if (ele.value == start) ele.classList.add("active");

                })
            }
            else this.classList.add("disabled");
        })
    }


    function Save() {

        var formData = new FormData();
        let id = $("#link_id").val();
        let link_code = $("#link_code").val();
        let link_name = $("#link_name").val();
        let description = $("#description").val();
        let active = $("#active").val();
        let ob = {
            Id: id == '' ? -1 : id,
            Link_Name: link_name,
            Link_Code: link_code,
            Description: description,
            Active: active
        }
        formData.append('model', JSON.stringify(ob));
        $.ajax({
            type: "POST",
            datatype: "json",
            data: formData,
            url: "https://localhost:44329/admin/weblink/CreateOrUpdate",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (data) {
                alert(data.messege);
                $("#exampleModal").modal('hide');
                loadData(start, length, object);
            }
        })
    }

    function add() {
        $("#exampleModal").modal("show");
        $("#link_id").val("-1");
        $("#link_code").val("");
        $("#link_name").val("");
        $("#description").val("");
        $("#active").val("");
    }

    function Edit(id) {
        var formData = new FormData();

        let ob = {
            Id: id == '' ? -1 : id
        }
        formData.append('model', JSON.stringify(ob));
        $.ajax({
            type: "POST",
            datatype: "json",
            data: formData,
            url: "https://localhost:44329/admin/weblink/GetByID",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (data) {
                $("#exampleModalLabel").html("Sửa liên kết");
                $("#link_id").val(data.id);
                $("#link_code").val(data.link_Code);
                $("#link_name").val(data.link_Name);
                $("#description").val(data.description);
                $("#active").val(data.active);
                $("#exampleModal").modal("show");

            }

        })
    }
    function Delete(id) {
        var formData = new FormData();

        let ob = {
            Id: id
        }
        formData.append('model', JSON.stringify(ob));
        $.ajax({
            type: "POST",
            datatype: "json",
            data: formData,
            url: "https://localhost:44329/admin/weblink/GetByID",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (data) {
                $("#link_id_delete").val(data.id);
                $("#delete").modal("show");
            }

        })

    }

    function SaveDelete(){
        var formData = new FormData();
        let id = $("#link_id_delete").val();
        let ob = {
            Id: id
        }
        formData.append('model', JSON.stringify(ob));
        $.ajax({
            type: "POST",
            datatype: "json",
            data: formData,
            url: "https://localhost:44329/admin/weblink/Delete",
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (data) {
                alert(data.messege);
                $("#delete").hide();
                loadData(start, length, object);
            }

        })
    }
</script>
